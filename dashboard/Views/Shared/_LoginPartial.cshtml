@using Microsoft.AspNetCore.Identity
@using dashboard.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var nomecompleto = User.Identity.IsAuthenticated ?
        User.Claims.First(c => c.Type == "NomeCompleto").Value : "";
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="icon">
                <i class="fas fa-sign-out-alt"></i>
            </div>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">Desconectar-se</button>
            </form>
        </li>
        <li class="nav-item">
            <div class="icon">
                <i class="fas fa-user"></i>
            </div>
            <div>
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@nomecompleto</a>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Cadastre uma nova conta</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Entre na sua conta</a>
        </li>
    }
</ul>